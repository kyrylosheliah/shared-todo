<Window x:Class="TodoClientWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TodoClientWpf"
        mc:Ignorable="d"
        Title="To-do list" Height="450" Width="800">
    <StackPanel Margin="10">
        <!-- New to-do item input -->
        <GroupBox Header="Add">
            <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="10">
                <TextBox x:Name="TitleInput" Width="280" Height="30" Margin="0 0 10 0" VerticalContentAlignment="Center" />
                <Button Width="30" Height="30" Click="AddTask_Click">
                    <Viewbox>
                        <Path Data="M8,0 L8,8 L0,8 L0,10 L8,10 L8,18 L10,18 L10,10 L18,10 L18,8 L10,8 L10,0 Z"
                          Fill="Black"/>
                    </Viewbox>
                </Button>
            </StackPanel>
        </GroupBox>
        <!-- The list of to-do items -->
        <ScrollViewer Height="auto">
            <ItemsControl x:Name="TodoList">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <DockPanel Margin="0 5">
                            <CheckBox IsChecked="{Binding IsCompleted, Mode=TwoWay}"
                                  Checked="TaskCheckBox_Changed"
                                  Unchecked="TaskCheckBox_Changed"
                                  Tag="{Binding Id}"
                                  Margin="0 0 10 0" />
                            <TextBlock Text="{Binding Description}" Width="200" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding Status}" Foreground="Gray" VerticalAlignment="Center"/>
                        </DockPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </StackPanel>
</Window>
