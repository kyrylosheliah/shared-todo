<Window
    x:Class="TodoClientWpf.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:TodoClientWpf.Views"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:converters="clr-namespace:TodoClientWpf.Converters"
    xmlns:models="clr-namespace:TodoClientWpf.Models"
    mc:Ignorable="d"
    Title="To-do list"
    SizeToContent="Manual"
    MinWidth="400" Width="400"
    MinHeight="300" Height="300"
    WindowStartupLocation="CenterScreen"
    Background="{DynamicResource ApplicationBackgroundBrush}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}">

    <Window.Resources>
        <converters:BoolToHiddenVisibilityConverter x:Key="BoolToHiddenVisibilityConverter" />
        <converters:TextNotEmptyConverter x:Key="TextNotEmptyConverter"/>
        <converters:TextNotEmptyVisibilityConverter x:Key="TextNotEmptyVisibilityConverter"/>

        <ControlTemplate x:Key="RoundedProgressBar" TargetType="ProgressBar">
            <Grid>
                <Border
                    BorderBrush="{TemplateBinding BorderBrush}"
                    BorderThickness="{TemplateBinding BorderThickness}"
                    Background="{TemplateBinding Background}"
                    CornerRadius="5"/>
                <Rectangle x:Name="PART_Track" />
                <Grid x:Name="PART_Indicator" ClipToBounds="true" HorizontalAlignment="Left">
                    <Rectangle
                        x:Name="Indicator"
                        Fill="{TemplateBinding Foreground}"
                        RadiusX="5" RadiusY="5"/>
                    <Rectangle
                        x:Name="Animation"
                        Fill="{TemplateBinding Foreground}"
                        RadiusX="5" RadiusY="5">
                    </Rectangle>
                </Grid>
            </Grid>
        </ControlTemplate>
    </Window.Resources>

    <Grid VerticalAlignment="Stretch" Margin="10 0 10 10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <!-- New to-do item description input -->
        <StackPanel Grid.Row="0" Margin="0 10">
            <ui:TextBlock
                Text="Add a new task"
                FontSize="16"
                FontWeight="SemiBold"
                Margin="10 0"/>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <ui:TextBox
                    x:Name="DescriptionInput"
                    VerticalAlignment="Stretch"
                    VerticalContentAlignment="Stretch"
                    Margin="0 0 10 0"
                    PlaceholderText="description ..."
                    TextWrapping="Wrap"
                    KeyDown="DescriptionInput_KeyDown"/>

                <ui:Button
                    x:Name="plusButton"
                    Grid.Column="1"
                    Click="AddTask_Click"
                    Appearance="Primary"
                    CornerRadius="8"
                    Padding="0"
                    Width="30" Height="30"
                    VerticalContentAlignment="Center"
                    IsEnabled="{Binding Text, ElementName=DescriptionInput, Converter={StaticResource TextNotEmptyConverter}}"
                    Visibility="{Binding Text, ElementName=DescriptionInput, Converter={StaticResource TextNotEmptyVisibilityConverter}}">
                    <TextBlock
                        Text="+" FontSize="24"
                        Margin="0 -5 0 0"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center" />
                </ui:Button>
            </Grid>
        </StackPanel>

        <!-- Task List Section -->
        <ui:Card VerticalAlignment="Top" Grid.Row="1" Padding="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                
                <!-- Header Row -->
                <Grid Grid.Row="0" Margin="0 0 0 8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="40"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="80" />
                        <ColumnDefinition Width="40"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="✓" FontWeight="SemiBold" VerticalAlignment="Center" HorizontalAlignment="Center" />
                    <TextBlock Grid.Column="1" Text="Description" FontWeight="SemiBold"/>
                    <TextBlock Grid.Column="2" Text="Status" FontWeight="SemiBold"/>
                    <TextBlock Grid.Column="3" Text="Id" FontWeight="SemiBold"/>
                </Grid>

                <!-- Items List -->
                <ScrollViewer Grid.Row="1" MinHeight="1" Height="auto" VerticalAlignment="Stretch" VerticalScrollBarVisibility="Auto">
                    <ItemsControl x:Name="TodoList">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <ProgressBar
                                        x:Name="DeletionProgressBar"
                                        Template="{DynamicResource RoundedProgressBar}"
                                        Grid.RowSpan="1"
                                        Margin="0 4"
                                        Minimum="0" Maximum="10000"
                                        Value="{Binding CompletionProgress}"
                                        Visibility="{Binding IsPendingDone, Converter={StaticResource BoolToHiddenVisibilityConverter}}"
                                        Foreground="#888"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Height="auto"
                                        VerticalAlignment="Stretch"
                                        HorizontalAlignment="Stretch"/>

                                    <ui:Card Grid.Row="0" Margin="0 4" Padding="0 10">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="40"/>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="80"/>
                                                <ColumnDefinition Width="40"/>
                                            </Grid.ColumnDefinitions>

                                            <CheckBox
                                                Grid.Column="0"
                                                Padding="0"
                                                IsChecked="{Binding IsCompleted, Mode=TwoWay}"
                                                Checked="TaskCheckBox_Changed"
                                                Unchecked="TaskCheckBox_Changed"
                                                Tag="{Binding Id}"
                                                VerticalAlignment="Center" HorizontalAlignment="Center"/>

                                            <TextBlock
                                                Grid.Column="1"
                                                Padding="0"
                                                Text="{Binding Description}"
                                                VerticalAlignment="Center"
                                                TextWrapping="WrapWithOverflow"/>

                                            <TextBlock
                                                Grid.Column="2"
                                                Padding="0"
                                                Text="{Binding Status}"
                                                Foreground="Gray"
                                                VerticalAlignment="Center"/>

                                            <TextBlock
                                                Grid.Column="3"
                                                Padding="0"
                                                Text="{Binding Id}"
                                                Foreground="Gray"
                                                VerticalAlignment="Center"/>
                                        </Grid>
                                    </ui:Card>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>

                <TextBlock
                    Grid.Row="2"
                    Text="Empty..."
                    Opacity="0.5"
                    FontStyle="Italic"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding HasItems, ElementName=TodoList}" Value="False">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </Grid>
        </ui:Card>
    </Grid>
</Window>
